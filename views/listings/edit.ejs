<% layout("/layouts/boilerplate.ejs") %>
<body>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="listing-form needs-validation" novalidate>
        <h2>Edit Listing</h2>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" value="<%= listing.title %>" required>
        
        <label for="description">Description</label>
        <textarea id="description" name="description" required><%= listing.description %></textarea>
        
        <label for="price">Price (â‚¹)</label>
        <input type="number" id="price" name="price" value="<%= listing.price %>" required>
        
        <label for="location">Location</label>
        <input type="text" id="location" name="location" value="<%= listing.location %>" required>
        
        <button type="submit" class="btn-primary">Update Listing</button>
    </form>
</body>
