<% layout("/layouts/boilerplate.ejs") %>
<body>
    
<form method="POST" action="/listings" class="listing-form">
    <h2>Add New Listing</h2>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Beautiful apartment in Pune">

    <label for="description">Description</label>
    <textarea id="description" name="description" placeholder="Describe your property..."></textarea>

    <label for="image">Image URL</label>
    <input type="url" id="image" name="image" placeholder="https://example.com/image.jpg">

    <label for="price">Price (â‚¹)</label>
    <input type="number" id="price" name="price" placeholder="1500">

    <label for="location">Location</label>
    <input type="text" id="location" name="location" placeholder="Pune, Maharashtra">

    <label for="country">Country</label>
    <input type="text" id="country" name="country" placeholder="India">

    <button type="submit" class="btn-primary">Create Listing</button>
</form>

</body>
